@model List<Practica.EF.MVC.Models.CategoriesView>

@{
    ViewBag.Title = "Categories List";
}


<h1>List of Categories</h1>

@Html.ActionLink("Insert new Category", "InsertUpdate", new { id = 0 }, new { @class = "btn button insert" })
<table class="table table-bordered">
    <thead>
        <tr class="active">
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td class="active">@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    @Html.ActionLink("Update", "InsertUpdate", new { id = category.Id }, new { @class = "btn button" })
                    @Html.ActionLink("Delete", "Delete", new { id = category.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you wanna delete this category?')" })
                </td>
            </tr>
        }
    </tbody>
</table>



