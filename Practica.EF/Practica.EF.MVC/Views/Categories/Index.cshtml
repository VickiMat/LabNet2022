@model List<Practica.EF.MVC.Models.CategoriesView>

@{
ViewBag.Title = "Categories";
}

<h1>List of Categories with respective description</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Insert new Category", "Insert", "Categories")
</div>
